---
import Layout from "../layouts/Layout.astro";
import { Hero } from "../components/Hero.jsx";
import { Navbar } from "../components/Navbar.jsx";
import { ProductGrid } from "../components/ProductGrid.jsx";
import { Footer } from "../components/Footer.jsx";
import { ScrollUpButton } from "../components/ScrollUpButton";
import "../styles/Theme.css";
import "../styles/Diagonals.css";
---

<Layout title="GameStoreAc">
  <Navbar
    textButton={"Sign In"}
    buttonRedirect={"/signin"}
    textButton2={"Register"}
    buttonRedirect2={"/register"}
    client:load
  />
  <Hero text={"¡Bienvenido a GameStoreAc! Tu tienda de videojuegos favorita"}
  title={"La mejor selección de videojuegos te espera en GameStoreAc."}
  subTitle={"¿Listo para jugar? Encuentra todo lo que necesitas en GameStoreAc."}
  client:load />
  <ProductGrid client:load />
  <Footer />
  <ScrollUpButton client:load />
</Layout>
